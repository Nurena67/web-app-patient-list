<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2> Daftar Pasien </h2>

      <a href="/patients/create/new" class="btn btn-primary mb-3 mt-3"> Tambah Pasien Baru </a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nama</th>
            <th scope="col">Umur</th>
            <th scope="col">Keluhan</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (patients.length === 0) { %>
            <tr>
              <td colspan="5">
                <div class="alert alert-danger" role="alert">
                  Data Pasien Masih Kosong
                </div
              </td>
            </tr>
          <% } %>
          <% patients.forEach(patient => { %>
            <tr>
              <th scope="id"><%= patient.id %></th>
              <td><%= patient.nama %></td>
              <td><%= patient.umur %></td>
              <td><%= patient.keluhan %></td>
              <td>
                <a href="/patients/<%= patient.id %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail </a>
              </td>
            </tr>
          <% }) %>
          
        </tbody>
      </table>

    </div>
  </div>
</div>